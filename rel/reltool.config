       {app, zmq_test, [{mod_cond, app}, {incl_cond, include}]},
       {app, erlzmq, [{mod_cond, app}, {incl_cond, include}, {lib_dir, "/home/lucas/mk/zmq_test/deps/erlzmq"}]}
