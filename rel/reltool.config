{sys, [
       {lib_dirs, ["../../"]},
       {erts, [{mod_cond, derived}, {app_file, strip}]},
       {app_file, all},
       {rel, "zmq_test", "1",
        [
         kernel,
         stdlib,
         sasl,
         zmq_test,
         erlzmq,
         debugger
        ]},
       {rel, "start_clean", "",
